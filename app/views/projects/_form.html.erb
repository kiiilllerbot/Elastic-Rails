<%= simple_form_for(@project) do |f| %>
  <div class="form-inputs">
    <div class="mb-2">
      <%= f.input :title %>
    </div>
    <%= f.input :description, as: :trix_editor %>
  </div>

  <div class="form-actions mt-3">
    <%= f.button :submit, "Save", :class=>"btn btn-primary"%>
    <%= link_to "Back", projects_path, :class=>"btn btn-dark"%>
  </div>
<% end %>
